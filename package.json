{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.1",
    "@hotwired/turbo-rails": "^7.2.4",
    "@tailwindcss/forms": "^0.5.3",
    "autoprefixer": "^10.4.13",
    "esbuild": "^0.16.17",
    "postcss": "^8.4.21",
    "tailwindcss": "^3.2.4"
  },
  "scripts": {
    "lint": "standard app/javascript",
    "lint-fix": "standard app/javascript --fix",
