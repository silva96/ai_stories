<div aria-live="assertive" class="mt-12 z-10 pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6" data-controller="flashes">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    <% flash.each do |flash_type, message| %>
      <% next unless %w[notice alert warning].include?(flash_type) && message.present? %>
      <%= render partial: 'layouts/application/flash', locals: { flash_type: flash_type, message: message } %>
    <% end %>
  </div>
</div>
