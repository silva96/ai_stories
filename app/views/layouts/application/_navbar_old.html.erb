<div class="px-6 py-4 lg:px-8 bg-white mb-8" data-controller="toggable">
  <div>
    <nav class="flex h-9 items-center justify-between" aria-label="Global">
      <div class="flex lg:min-w-0 lg:flex-1" aria-label="Global">
        <%= link_to(current_user ? dashboard_path : root_path, class: '-m-1.5 p-1.5') do %>
          <span class="book-font  text-2xl">AiStories</span>
        <% end %>
      </div>
      <div class="flex lg:hidden">
        <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" data-action="toggable#toggle">
          <span class="sr-only"><%= t('open_main_menu') %></span>
          <!-- Heroicon name: outline/bars-3 -->
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
      <div class="hidden lg:flex lg:min-w-0 lg:flex-1 lg:justify-center lg:gap-x-12">
        <%= link_to(t('my_stories'), dashboard_path, class: 'font-semibold text-gray-900 hover:text-gray-900') %>
        <%= link_to(t('community_stories'), stories_path, class: 'font-semibold text-gray-900 hover:text-gray-900') %>
      </div>
      <div class="hidden lg:flex lg:min-w-0 lg:flex-1 lg:justify-end">
        <%= link_to(t('create_new_story'), new_story_path, class: 'mr-4 inline-block rounded-lg px-3 py-1.5 text-sm font-semibold leading-6 text-indigo-600 shadow-sm ring-1 ring-indigo-600/10 hover:ring-indigo-600/20') %>
        <% if current_user %>
          <%= button_to(t('sign_out'), sign_out_path, method: :delete, class: 'mr-4 inline-block rounded-lg px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-gray-900/10 hover:ring-gray-900/20') %>
        <% else %>
          <%= link_to(t('sign_in'), sign_in_path, class: 'mr-4 inline-block rounded-lg px-3 py-1.5 text-sm font-semibold leading-6 text-gray-900 shadow-sm ring-1 ring-gray-900/10 hover:ring-gray-900/20') %>
        <% end %>
      </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div role="dialog" aria-modal="true" class="hidden" data-toggable-target="target">
      <div focus="true" class="fixed inset-0 z-10 overflow-y-auto bg-white px-6 py-6 lg:hidden">
        <div class="flex h-9 items-center justify-between">
          <div class="flex">
            <a href="/" class="-m-1.5 p-1.5">
              <span class="book-font text-2xl">AiStories</span>
            </a>
          </div>
          <div class="flex">
            <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700" data-action="toggable#toggle">
              <span class="sr-only"><%= t('close_menu') %></span>
              <!-- Heroicon name: outline/x-mark -->
              <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>
        </div>
        <div class="mt-6 flow-root">
          <div class="-my-6 divide-y divide-gray-500/10">
            <div class="space-y-2 py-6">
              <%= link_to(t('create_new_story'), new_story_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-400/10') %>
              <%= link_to(t('community_stories'), stories_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-400/10') %>
              <%= link_to(t('donate'), 'https://www.paypal.com/donate/?hosted_button_id=TKN2THHAQAYX8', class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-400/10') %>
              <div class="border-t border-gray-200"></div>
              <% if current_user %>
                <%= button_to(t('sign_out'), sign_out_path, method: :delete, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-red-500 hover:bg-gray-400/10') %>
              <% else %>
                  <%= link_to(t('sign_in'), sign_in_path, class: '-mx-3 block rounded-lg py-2 px-3 text-base font-semibold leading-7 text-indigo-600 hover:bg-gray-400/10') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
