<% content_for :pre_navbar_content do %>
  <%= render partial: 'site/figure' %>
<% end %>
<div class="relative px-6 lg:px-8">
  <div class="mx-auto max-w-3xl pt-20 sm:pt-48">
    <div>
      <div>
        <h1 class="text-4xl font-bold tracking-tight sm:text-center sm:text-6xl"><%= t('home.hero_title') %></h1>
        <p class="mt-6 text-lg leading-8 text-gray-600 sm:text-center">
          <%= t('home.hero_description') %>
        </p>
        <div class="mt-8 flex gap-x-4 sm:justify-center">
          <%= link_to new_story_path, class: 'inline-block rounded-lg bg-indigo-600 px-4 py-1.5 text-base font-semibold leading-7 text-white shadow-sm ring-1 ring-indigo-600 hover:bg-indigo-700 hover:ring-indigo-700' do %>
            <%= t('create_new_story') %>
            <span class="text-indigo-200" aria-hidden="true">&rarr;</span>
          <% end %>
          <%= link_to stories_path, class: 'inline-block rounded-lg px-4 py-1.5 text-base font-semibold leading-7 text-gray-900 ring-1 ring-gray-900/10 hover:ring-gray-900/20' do %>
            <%= t('community_stories') %>
            <span class="text-gray-400" aria-hidden="true">&rarr;</span>
          <% end %>
        </div>
      </div>
      <div class="absolute inset-x-0 top-[calc(100%-13rem)] -z-10 transform-gpu overflow-hidden blur-3xl sm:top-[calc(100%-30rem)]">
        <svg class="relative left-[calc(50%+3rem)] h-[21.1875rem] max-w-none -translate-x-1/2 sm:left-[calc(50%+36rem)] sm:h-[42.375rem]" viewBox="0 0 1155 678" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path fill="url(#ecb5b0c9-546c-4772-8c71-4d3f06d544bc)" fill-opacity=".3" d="M317.219 518.975L203.852 678 0 438.341l317.219 80.634 204.172-286.402c1.307 132.337 45.083 346.658 209.733 145.248C936.936 126.058 882.053-94.234 1031.02 41.331c119.18 108.451 130.68 295.337 121.53 375.223L855 299l21.173 362.054-558.954-142.079z" />
          <defs>
            <linearGradient id="ecb5b0c9-546c-4772-8c71-4d3f06d544bc" x1="1155.49" x2="-78.208" y1=".177" y2="474.645" gradientUnits="userSpaceOnUse">
              <stop stop-color="#9089FC"></stop>
              <stop offset="1" stop-color="#FF80B5"></stop>
            </linearGradient>
          </defs>
        </svg>
      </div>
    </div>
  </div>
  <div class="overflow-hidden bg-gray-50 pb-12" id="instructions">
    <div class="relative mx-auto max-w-xl px-6 lg:max-w-7xl lg:px-8">
      <svg class="absolute left-full hidden -translate-x-1/2 -translate-y-1/4 transform lg:block" width="404" height="784" fill="none" viewBox="0 0 404 784" aria-hidden="true">
        <defs>
          <pattern id="b1e6e422-73f8-40a6-b5d9-c8586e37e0e7" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor" />
          </pattern>
        </defs>
        <rect width="404" height="784" fill="url(#b1e6e422-73f8-40a6-b5d9-c8586e37e0e7)" />
      </svg>
      <div class="relative mt-12 lg:mt-24 lg:grid lg:grid-cols-2 lg:items-center lg:gap-8">
        <div class="relative">
          <h3 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl"><%= t('home.3_steps') %></h3>
          <p class="mt-3 text-lg text-gray-500"><%= t('home.free_description_html') %></p>
          <dl class="mt-10 space-y-10">
            <div class="relative">
              <dt>
                <div class="absolute flex h-12 w-12 items-center justify-center rounded-xl bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.042 21.672L13.684 16.6m0 0l-2.51 2.225.569-9.47 5.227 7.917-3.286-.672zM12 2.25V4.5m5.834.166l-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243l-1.59-1.59" />
                  </svg>
                </div>
                <p class="ml-16 text-lg font-medium leading-6 text-gray-900"><%= t('home.register_at_open_ai') %></p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-500">
                <%= t('home.register_at_open_ai_description_html') %>
              </dd>
            </div>

            <div class="relative">
              <dt>
                <div class="absolute flex h-12 w-12 items-center justify-center rounded-xl bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19 7.5v3m0 0v3m0-3h3m-3 0h-3m-2.25-4.125a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zM4 19.235v-.11a6.375 6.375 0 0112.75 0v.109A12.318 12.318 0 0110.374 21c-2.331 0-4.512-.645-6.374-1.766z" />
                  </svg>
                </div>
                <p class="ml-16 text-lg font-medium leading-6 text-gray-900"><%= t('home.register_at_this_platform') %></p>
              </dt>
              <dd class="mt-2 ml-16 text-base text-gray-500"><%= t('home.register_at_this_platform_description_html', sign_up_url:) %></dd>
            </div>
            <div class="relative">
              <dt>
                <div class="absolute flex h-12 w-12 items-center justify-center rounded-xl bg-indigo-500 text-white">
                  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
